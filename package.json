{
	"name": "util.merge-packages",
	"version": "0.0.15",
	"author": "jmquigley <jmquigley@outlook.com>",
	"description": "Merges the contents of two package.json files",
	"private": false,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/jmquigley/util.merge-packages"
	},
	"bugs": {
		"url": "https://github.com/jmquigley/util.merge-packages/issues"
	},
	"engines": {
		"node": ">=7.x"
	},
	"bin": {
		"pkgmerge": "./cli.js"
	},
	"main": "./index.umd.min.js",
	"module": "./index.es.min.js",
	"types": "./index.d.ts",
	"files": [
		"cli.js",
		"index.js",
		"index.*.min.js",
		"index.d.ts"
	],
	"dependencies": {
		"jju": "^1.4.0",
		"lodash": "^4.17.11",
		"semver": "^5.6.0",
		"semver-set": "^0.1.1",
		"util.toolbox": "0.0.73",
		"uuid": "^3.3.2",
		"yargs": "^13.2.2"
	},
	"devDependencies": {
		"@babel/cli": "^7.2.3",
		"@babel/core": "^7.3.4",
		"@babel/plugin-transform-modules-umd": "^7.2.0",
		"@babel/preset-env": "^7.3.4",
		"@babel/preset-typescript": "^7.3.3",
		"@babel/runtime": "^7.3.4",
		"@types/fs-extra": "^5.0.5",
		"@types/jest": "^24.0.9",
		"@types/lodash": "^4.14.122",
		"@types/node": "^11.10.5",
		"@types/semver": "^5.5.0",
		"@types/yargs": "^12.0.9",
		"babel-minify": "^0.5.0",
		"babel-preset-minify": "^0.5.0",
		"coveralls": "^3.0.3",
		"fs-extra": "^7.0.1",
		"jest": "^24.3.1",
		"prettier": "^1.16.4",
		"tslint": "^5.13.1",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^3.3.3333",
		"util.fixture": "0.0.69",
		"util.pkgwrap": "^0.0.104"
	},
	"pkgwrap": {
		"cleanup": [
			"cli.js",
			"cli.js.map",
			"cli.d.ts"
		]
	},
	"scripts": {
		"all": "yarn install && yarn build && yarn test",
		"build": "yarn clean && yarn lint && yarn prettier && yarn build:es && yarn build:umd && yarn build:cli",
		"build:es": "tsc -p . && minify index.js --out-file index.es.min.js",
		"build:umd": "babel index.js --out-file index.umd.min.js",
		"build:cli": "babel cli.js --out-file cli.js",
		"clean": "pkgwrap --clean",
		"clean:dist": "yarn clean && rimraf node_modules/ yarn.lock",
		"coverage": "pkgwrap --coverage --jest",
		"lint": "pkgwrap --lint",
		"prepublishOnly": "yarn run all",
		"prettier": "prettier --write \"**/*.{ts,tsx,js,json,yaml,yml,css}\"",
		"test": "jest"
	}
}
